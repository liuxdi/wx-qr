{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "types": [
      "miniprogram-api-typings"
    ],
    "paths": {
      "definitions/*": [
        "./packages/definitions/*"
      ]
    },
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "wx-qr/**/*"
  ],
  
}